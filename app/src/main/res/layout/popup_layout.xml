<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="30px"
    android:background="@drawable/rounded_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="넙죽이가 추천하는"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10px"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="40px">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 식당은"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="6dp" /> <!-- 오른쪽 간격 -->

        <TextView
            android:id="@+id/popup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="22sp"
            android:textFontWeight="900"
            android:layout_marginEnd="6dp" /> <!-- 오른쪽 간격 -->

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입니다."
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        android:id="@+id/popup_image"
        android:layout_width="900px"
        android:layout_height="900px"
        android:layout_gravity="center"
        android:background="@drawable/rounded_background"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <!-- 주소 -->

    <TextView
        android:id="@+id/popup_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:text="Address" />

    <!-- 사진 -->

    <!-- 버튼 영역 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/popup_close_button"
            android:layout_width="430px"
            android:layout_height="160px"
            android:background="@drawable/rounded_button"
            android:text="닫기"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/popup_call_button"
            android:layout_width="430px"
            android:layout_height="160px"
            android:background="@drawable/rounded_button"
            android:layout_marginStart="25px"
            android:text="전화 걸기"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>