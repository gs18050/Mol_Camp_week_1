<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.image.ImageFragment">

    <View
        android:id="@+id/background_circle"
        android:layout_width="1100px"
        android:layout_height="1155px"
        android:background="@drawable/circle_background"
        tools:layout_editor_absoluteX="-260px"
        tools:layout_editor_absoluteY="-580px"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly â€¢ Nupjuk's Pick"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="80px"
        tools:layout_editor_absoluteY="200px" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHOTO BOX"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="80px"
        tools:layout_editor_absoluteY="260px" />

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="128dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:src="@drawable/nubjuk3"
        tools:layout_editor_absoluteX="660px"
        tools:layout_editor_absoluteY="220px"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="660px"
        android:layout_marginBottom="180px"

        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/item_image" />

</androidx.constraintlayout.widget.ConstraintLayout>